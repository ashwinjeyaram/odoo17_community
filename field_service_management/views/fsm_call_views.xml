<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
    
        <!-- Form View -->
    <record id="view_fsm_call_form" model="ir.ui.view">
        <field name="name">fsm.call.form</field>
        <field name="model">fsm.call</field>
        <field name="arch" type="xml">
            <form string="Service Call">
                <header>
                    <button name="action_confirm" string="Confirm" type="object" class="btn-primary" 
                            invisible="state != 'draft'"/>
                    <button name="action_open_assign_wizard" string="Assign" type="object" class="btn-primary"
                            invisible="state not in ['draft', 'confirmed']"/>
                    <button name="action_start" string="Start Service" type="object" class="btn-primary"
                            invisible="state != 'assigned'"/>
                    <button name="action_pending_spares" string="Pending Spares" type="object"
                            invisible="state != 'in_progress'"/>
                    <button name="action_update_warranty_expiry" string="Update Warranty" type="object" class="btn-secondary"
                            invisible="state == 'closed'"/>
                    <button name="action_check_warranty_status" string="Check Warranty" type="object" class="btn-secondary"
                            invisible="state == 'closed'"/>
                    <button name="action_resolve" string="Resolve" type="object" class="btn-primary"
                            invisible="state not in ['in_progress', 'pending_spares', 'pending_customer']"/>
                    <button name="action_close_with_otp" string="Close" type="object" class="btn-success"
                            invisible="state != 'resolved'"/>
                    <button name="action_cancel" string="Cancel" type="object"
                            invisible="state in ['closed', 'cancelled']"/>
                    <button name="action_reopen" string="Reopen" type="object"
                            invisible="state not in ['closed', 'cancelled']"/>
                    <field name="state" widget="statusbar" statusbar_visible="draft,confirmed,assigned,in_progress,resolved,closed"/>
                </header>
                <sheet readonly="state in ['resolved', 'closed']">
                    <field name="is_sla_breached" invisible="1"/>
                    <div class="oe_button_box" name="button_box">
                        <button name="action_view_spare_requests" type="object" class="oe_stat_button" icon="fa-wrench"
                                invisible="state in ['draft', 'confirmed']">
                            <field name="spare_request_count" widget="statinfo" string="Spare Requests"/>
                        </button>
                    </div>
                    <widget name="web_ribbon" title="SLA Breached" bg_color="bg-danger"
                       invisible="not is_sla_breached"/>
                <widget name="web_ribbon" title="Draft" bg_color="bg-secondary"
                       invisible="state != 'draft'"/>
                <widget name="web_ribbon" title="Confirmed" bg_color="bg-info"
                       invisible="state != 'confirmed'"/>
                <widget name="web_ribbon" title="Assigned" bg_color="bg-primary"
                       invisible="state != 'assigned'"/>
                <widget name="web_ribbon" title="In Progress" bg_color="bg-warning"
                       invisible="state != 'in_progress'"/>
                <widget name="web_ribbon" title="Pending Spares" bg_color="bg-warning"
                       invisible="state != 'pending_spares'"/>
                <widget name="web_ribbon" title="Pending Customer" bg_color="bg-warning"
                       invisible="state != 'pending_customer'"/>
                <widget name="web_ribbon" title="Resolved" bg_color="bg-success"
                       invisible="state != 'resolved'"/>
                <widget name="web_ribbon" title="Closed" bg_color="bg-success"
                       invisible="state != 'closed'"/>
                <widget name="web_ribbon" title="Cancelled" bg_color="bg-danger"
                       invisible="state != 'cancelled'"/>
                    <div class="oe_title">
                        <h1>
                            <field name="name" readonly="1"/>
                        </h1>
                    </div>
                    <group>
                        
                        <group string="Service Information">
                             <field name="name" readonly="1"/>
                            <field name="service_type" widget="radio" options="{'horizontal': true}"/>
                            <field name="call_type" widget="radio" options="{'horizontal': true}"/>
                            <field name="call_date"/>
                            <field name="priority" widget="priority"/>
                            <field name="tag_ids" widget="many2many_tags"/>
                        </group>
                        <group string="Customer Information">
                            <field name="partner_id" options="{'no_create': True}"/>
                            <field name="phone"/>
                            <field name="mobile"/>
                            <field name="email"/>
                        </group>
                    </group>
                    <group>
                        <group string="Location Information">
                            <field name="fsm_state_id" options="{'no_create': True}" string="State"/>
                            <field name="fsm_district_id" options="{'no_create': True}" domain="[('state_id', '=', fsm_state_id)]" string="District"/>
                            <field name="fsm_pincode_id" options="{'no_create': True}" domain="[('district_id', '=', fsm_district_id)]" string="Pincode"/>
                            <field name="fsm_area_id" options="{'no_create': True}" domain="[('pincode_id', '=', fsm_pincode_id)]" string="Area"/>
                        </group>
                        <group string="Warranty Information">
                            <field name="warranty_status"/>
                            <field name="sla_deadline" invisible="sla_deadline == False"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Service Details">
                            <group>
                                <group string="Product Information">
                                    <field name="product_id"/>
                                    <field name="model_name" options="{'no_create': True}"/>
                                    <field name="serial_number"/>
                                    <field name="purchase_date"/>
                                    <field name="dealer_id"/>
                                    <field name="dealer_phone"/>
                                    <field name="fault_id"/>
                                </group>
                                <group string="Warranty Details">
                                    <field name="warranty_type" readonly="1"/>
                                    <field name="warranty_status"/>
                                    <field name="warranty_expiry_date" invisible="warranty_status == 'no'"/>
                                    <button name="action_update_warranty_expiry" type="object" string="Update Warranty Expiry" class="btn-secondary"/>
                                    <button name="action_check_warranty_status" type="object" string="Check Warranty Status" class="btn-secondary"/>
                                </group>
                            </group>
                            <group>
                                <group string="Assignment">
                                    <field name="technician_id" options="{'no_create': True}"/>
                                    <field name="service_partner_id" readonly="1"/>
                                    <field name="auto_assigned" invisible="1"/>
                                    <field name="assigned_date" readonly="1" invisible="assigned_date == False"/>
                                </group>
                                <group>
                                    <!-- Empty group for alignment -->
                                </group>
                            </group>
                            <group string="Complaint Details">
                                <field name="nature_complaint" placeholder="Describe the nature of complaint..."/>
                                <field name="symptoms" placeholder="Describe symptoms or issues..."/>
                            </group>
                            <group string="Resolution" invisible="state in ['draft', 'confirmed', 'assigned']">
                                <field name="resolution" placeholder="Describe the resolution..."/>
                                <field name="parts_used" placeholder="List parts used..."/>
                                <field name="service_notes" placeholder="Additional service notes..."/>
                            </group>
                        </page>
                        <page string="Address">
                            <group>
                                <group string="Address Details">
                                    <field name="street"/>
                                    <field name="street2"/>
                                    <field name="city"/>
                                    <field name="state_id"/>
                                    <field name="zip"/>
                                    <field name="country_id"/>
                                </group>
                                <group>
                                    <!-- Empty group for alignment -->
                                </group>
                            </group>
                        </page>
                        <page string="Charges">
                            <group>
                                <group string="Charge Details">
                                    <field name="service_charge"/>
                                    <field name="spare_charge"/>
                                    <field name="total_charge"/>
                                </group>
                                <group string="Payment Information">
                                    <field name="is_paid"/>
                                </group>
                            </group>
                        </page>
                        <page string="Spare Requests">
                            <field name="spare_request_ids" readonly="1">
                                <tree>
                                    <field name="name"/>
                                    <field name="request_date"/>
                                    <field name="state"/>
                                </tree>
                            </field>
                        </page>
                        <page string="Feedback">
                            <field name="feedback_ids" readonly="1">
                                <tree>
                                    <field name="rating" widget="priority"/>
                                    <field name="satisfaction"/>
                                    <field name="otp_verified"/>
                                    <field name="state"/>
                                </tree>
                            </field>
                        </page>
                        <page string="Expenses">
                            <field name="expense_ids" readonly="1">
                                <tree>
                                    <field name="name"/>
                                    <field name="expense_type"/>
                                    <field name="amount" sum="Total"/>
                                    <field name="state"/>
                                </tree>
                            </field>
                        </page>
                        <page string="Time Tracking">
                            <group>
                                <group string="Timeline">
                                    <field name="confirmed_date" readonly="1"/>
                                    <field name="start_date" readonly="1"/>
                                    <field name="resolved_date" readonly="1"/>
                                    <field name="closed_date" readonly="1"/>
                                </group>
                                <group string="Metrics">
                                    <field name="response_time" widget="float_time"/>
                                    <field name="resolution_time" widget="float_time"/>
                                    <field name="closing_days"/>
                                    <field name="aging_days"/>
                                </group>
                            </group>
                        </page>
                        <page string="Attachments">
                            <field name="attachment_ids" widget="many2many_binary"/>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>
    
    <!-- Tree View -->
    <record id="view_fsm_call_tree" model="ir.ui.view">
        <field name="name">fsm.call.tree</field>
        <field name="model">fsm.call</field>
        <field name="arch" type="xml">
            <tree string="Service Calls" decoration-danger="is_sla_breached==True" 
                  decoration-warning="priority=='3'" decoration-info="state=='assigned'"
                  decoration-success="state=='closed'" decoration-muted="state=='cancelled'">
                <field name="name"/>
                <field name="partner_id"/>
                <field name="model_name"/>
                <field name="warranty_type"/>
                <field name="technician_id"/>
                <field name="call_date"/>
                <field name="priority" widget="priority"/>
                <field name="state" widget="badge" 
                       decoration-success="state=='closed'" 
                       decoration-info="state in ('assigned','in_progress')"
                       decoration-warning="state in ('pending_spares', 'pending_customer')"
                       decoration-danger="state=='cancelled'"
                       decoration-primary="state=='resolved'"/>
                <field name="is_sla_breached" invisible="1"/>
            </tree>
        </field>
    </record>
    
    <!-- Kanban View -->
    <record id="view_fsm_call_kanban" model="ir.ui.view">
        <field name="name">fsm.call.kanban</field>
        <field name="model">fsm.call</field>
        <field name="arch" type="xml">
            <kanban default_group_by="state" class="o_kanban_mobile">
                <field name="name"/>
                <field name="partner_id"/>
                <field name="technician_id"/>
                <field name="priority"/>
                <field name="state"/>
                <field name="is_sla_breached"/>
                <field name="tag_ids"/>
                <!-- <field name="color"/> -->
                <progressbar field="state"/>
                <templates>
                    <t t-name="kanban-box">
                        <div t-attf-class="oe_kanban_global_click">
                            <div class="o_kanban_record_top">
                                <div class="o_kanban_record_headings">
                                    <strong class="o_kanban_record_title">
                                        <field name="name"/>
                                    </strong>
                                </div>
                                <field name="priority" widget="priority"/>
                            </div>
                            <div class="o_kanban_record_body">
                                <div>
                                    <strong>Customer:</strong> <field name="partner_id"/>
                                </div>
                                <div t-if="record.technician_id.raw_value">
                                    <strong>Technician:</strong> <field name="technician_id"/>
                                </div>
                                <div>
                                    <strong>Warranty:</strong> <field name="warranty_type"/>
                                </div>
                                <div t-if="record.attachment_ids.raw_value.length">
                                    <strong>Attachments:</strong> <field name="attachment_ids" widget="many2many_tags"/>
                                </div>
                                <field name="tag_ids" widget="many2many_tags" />
                            </div>
                            <div class="o_kanban_record_bottom">
                                <div class="oe_kanban_bottom_left">
                                    <field name="call_date" widget="date"/>
                                </div>
                                <div class="oe_kanban_bottom_right">
                                    <span t-if="record.is_sla_breached.raw_value" class="badge badge-danger">SLA Breached</span>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>
    
    <!-- Search View -->
    <record id="view_fsm_call_search" model="ir.ui.view">
        <field name="name">fsm.call.search</field>
        <field name="model">fsm.call</field>
        <field name="arch" type="xml">
            <search string="Search Service Calls">
                <field name="name"/>
                <field name="partner_id"/>
                <field name="mobile"/>
                <field name="technician_id"/>
                <field name="dealer_id"/>
                <field name="nature_complaint"/>
                <field name="warranty_type"/>
                <filter name="my_calls" string="My Calls" domain="[('technician_id.user_id', '=', uid)]"/>
                <separator/>
                <filter name="today" string="Today" domain="[('call_date', '&gt;=', datetime.datetime.now().replace(hour=0, minute=0, second=0)), ('call_date', '&lt;=', datetime.datetime.now().replace(hour=23, minute=59, second=59))]"/>
                <filter name="urgent" string="Urgent" domain="[('priority', '=', '3')]"/>
                <filter name="sla_breached" string="SLA Breached" domain="[('is_sla_breached', '=', True)]"/>
                <separator/>
                <filter name="state_draft" string="Draft" domain="[('state', '=', 'draft')]"/>
                <filter name="state_assigned" string="Assigned" domain="[('state', '=', 'assigned')]"/>
                <filter name="state_in_progress" string="In Progress" domain="[('state', '=', 'in_progress')]"/>
                <filter name="state_pending" string="Pending" domain="[('state', 'in', ['pending_spares', 'pending_customer'])]"/>
                <filter name="state_closed" string="Closed" domain="[('state', '=', 'closed')]"/>
                <separator/>
                <filter name="warranty" string="Under Warranty" domain="[('warranty_status', '=', 'yes')]"/>
                <filter name="no_warranty" string="No Warranty" domain="[('warranty_type', '=', 'none')]"/>
                <filter name="limited_warranty" string="Limited Warranty" domain="[('warranty_type', '=', 'limited')]"/>
                <filter name="full_warranty" string="Full Warranty" domain="[('warranty_type', '=', 'full')]"/>
                <group expand="0" string="Group By">
                    <filter name="group_by_state" string="Status" context="{'group_by': 'state'}"/>
                    <filter name="group_by_technician" string="Assigned Technician" context="{'group_by': 'technician_id'}"/>
                    <filter name="group_by_dealer" string="Dealer" context="{'group_by': 'dealer_id'}"/>
                    <filter name="group_by_priority" string="Priority" context="{'group_by': 'priority'}"/>
                    <filter name="group_by_date" string="Call Date" context="{'group_by': 'call_date:day'}"/>
                    <filter name="group_by_warranty_type" string="Warranty Type" context="{'group_by': 'warranty_type'}"/>
                </group>
            </search>
        </field>
    </record>
    
    <!-- Calendar View -->
    <record id="view_fsm_call_calendar" model="ir.ui.view">
        <field name="name">fsm.call.calendar</field>
        <field name="model">fsm.call</field>
        <field name="arch" type="xml">
            <calendar string="Service Calls" date_start="call_date" color="technician_id" mode="month">
                <field name="name"/>
                <field name="partner_id"/>
                <field name="technician_id"/>
                <field name="state"/>
            </calendar>
        </field>
    </record>
    
    <!-- Action -->
    <record id="action_fsm_call" model="ir.actions.act_window">
        <field name="name">Service Calls</field>
        <field name="res_model">fsm.call</field>
        <field name="view_mode">tree,kanban,form,calendar,pivot,graph</field>
        <field name="search_view_id" ref="view_fsm_call_search"/>
        <field name="context">{'search_default_state_assigned': 1, 'search_default_state_in_progress': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create a new service call
            </p>
            <p>
                Manage service calls from creation to closure. Assign technicians, track progress, and ensure customer satisfaction.
            </p>
        </field>
    </record>
    
    <!-- Unassigned Calls Action -->
    <record id="action_fsm_unassigned_calls" model="ir.actions.act_window">
        <field name="name">Unassigned Calls</field>
        <field name="res_model">fsm.call</field>
        <field name="view_mode">tree,kanban,form</field>
        <field name="search_view_id" ref="view_fsm_call_search"/>
        <field name="domain">[('state', 'in', ['draft', 'confirmed'])]</field>
        <field name="context">{'search_default_state_draft': 1, 'search_default_state_confirmed': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                No unassigned calls
            </p>
            <p>
                These are service calls that haven't been assigned to a technician yet.
            </p>
        </field>
    </record>
</data>
</odoo>