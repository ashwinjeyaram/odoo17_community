<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- FSM Inventory Tree View -->
        <record id="view_fsm_inventory_tree" model="ir.ui.view">
            <field name="name">fsm.inventory.tree</field>
            <field name="model">fsm.inventory</field>
            <field name="arch" type="xml">
                <tree string="FSM Inventory Movements" decoration-info="state=='draft'" decoration-warning="state=='confirmed'" decoration-success="state=='done'" decoration-danger="state=='cancelled'">
                    <field name="name"/>
                    <field name="movement_type"/>
                    <field name="technician_id"/>
                    <field name="call_id"/>
                    <field name="movement_date"/>
                    <field name="source_location_id"/>
                    <field name="dest_location_id"/>
                    <field name="total_quantity"/>
                    <field name="total_value" widget="monetary"/>
                    <field name="currency_id" invisible="1"/>
                    <field name="state" widget="badge"/>
                </tree>
            </field>
        </record>
        
        <!-- FSM Inventory Form View -->
        <record id="view_fsm_inventory_form" model="ir.ui.view">
            <field name="name">fsm.inventory.form</field>
            <field name="model">fsm.inventory</field>
            <field name="arch" type="xml">
                <form string="FSM Inventory Movement">
                    <header>
                        <button name="action_confirm" string="Confirm" type="object" class="btn-primary" 
                                invisible="state != 'draft'"/>
                        <button name="action_process" string="Process" type="object" class="btn-primary"
                                invisible="state != 'confirmed'"/>
                        <button name="action_done" string="Complete" type="object" class="btn-success"
                                invisible="state not in ['confirmed', 'in_transit']"/>
                        <button name="action_cancel" string="Cancel" type="object"
                                invisible="state == 'done'"/>
                        <field name="state" widget="statusbar" statusbar_visible="draft,confirmed,in_transit,done"/>
                    </header>
                    <sheet>
                        <!-- <div class="oe_button_box" name="button_box">
                            <button name="action_view_picking" type="object" class="oe_stat_button" icon="fa-truck" invisible="picking_id == False">
                                <span class="o_stat_text">Stock Picking</span>
                            </button>
                        </div> -->
                        <div class="oe_title">
                            <h1>
                                <field name="name" readonly="1"/>
                            </h1>
                        </div>
                        <group>
                            <group string="Movement Details">
                                <field name="movement_type"/>
                                <field name="movement_date"/>
                                <field name="scheduled_date"/>
                                <field name="reference"/>
                            </group>
                            <group string="Locations">
                                <field name="source_location_id"/>
                                <field name="dest_location_id"/>
                                <field name="picking_id" readonly="1"/>
                            </group>
                        </group>
                        <group>
                            <group string="Related Records">
                                <field name="technician_id"/>
                                <field name="service_partner_id"/>
                                <field name="call_id"/>
                                <field name="spare_request_id"/>
                            </group>
                            <group string="Totals">
                                <field name="total_quantity"/>
                                <field name="total_value" widget="monetary"/>
                                <field name="currency_id" invisible="1"/>
                                <field name="company_id" groups="base.group_multi_company"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="Movement Lines">
                                <field name="line_ids">
                                    <tree editable="bottom">
                                        <field name="product_id" options="{'no_create': True}"/>
                                        <field name="spare_id"/>
                                        <field name="quantity"/>
                                        <field name="uom_id"/>
                                        <field name="unit_value" widget="monetary"/>
                                        <field name="total_value" widget="monetary"/>
                                        <field name="currency_id" invisible="1"/>
                                        <field name="lot_id"/>
                                        <field name="is_defective"/>
                                    </tree>
                                </field>
                            </page>
                            <page string="Notes">
                                <field name="notes" placeholder="Additional notes about this movement..."/>
                            </page>
                        </notebook>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids"/>
                        <field name="activity_ids"/>
                        <field name="message_ids"/>
                    </div>
                </form>
            </field>
        </record>
        
        <!-- FSM Inventory Kanban View -->
        <record id="view_fsm_inventory_kanban" model="ir.ui.view">
            <field name="name">fsm.inventory.kanban</field>
            <field name="model">fsm.inventory</field>
            <field name="arch" type="xml">
                <kanban default_group_by="state">
                    <field name="name"/>
                    <field name="movement_type"/>
                    <field name="technician_id"/>
                    <field name="call_id"/>
                    <field name="total_quantity"/>
                    <field name="total_value"/>
                    <field name="currency_id"/>
                    <field name="state"/>
                    <field name="movement_date"/>
                    <templates>
                        <t t-name="kanban-box">
                            <div t-attf-class="oe_kanban_global_click">
                                <div class="oe_kanban_details">
                                    <strong class="o_kanban_record_title">
                                        <field name="name"/>
                                    </strong>
                                    <div class="text-muted">
                                        <field name="movement_type"/>
                                    </div>
                                    <div t-if="record.technician_id.raw_value">
                                        <strong>Technician:</strong> <field name="technician_id"/>
                                    </div>
                                    <div t-if="record.call_id.raw_value">
                                        <strong>Service Call:</strong> <field name="call_id"/>
                                    </div>
                                    <div class="o_kanban_record_bottom">
                                        <div class="oe_kanban_bottom_left">
                                            <field name="movement_date" widget="date"/>
                                        </div>
                                        <div class="oe_kanban_bottom_right">
                                            <strong><field name="total_value" widget="monetary"/></strong>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>
        
        <!-- FSM Inventory Search View -->
        <record id="view_fsm_inventory_search" model="ir.ui.view">
            <field name="name">fsm.inventory.search</field>
            <field name="model">fsm.inventory</field>
            <field name="arch" type="xml">
                <search string="Search FSM Inventory">
                    <field name="name"/>
                    <field name="movement_type"/>
                    <field name="technician_id"/>
                    <field name="call_id"/>
                    <field name="source_location_id"/>
                    <field name="dest_location_id"/>
                    <filter name="draft" string="Draft" domain="[('state', '=', 'draft')]"/>
                    <filter name="confirmed" string="Confirmed" domain="[('state', '=', 'confirmed')]"/>
                    <filter name="in_transit" string="In Transit" domain="[('state', '=', 'in_transit')]"/>
                    <filter name="done" string="Done" domain="[('state', '=', 'done')]"/>
                    <separator/>
                    <filter name="inward" string="Material Inward" domain="[('movement_type', '=', 'inward')]"/>
                    <filter name="outward" string="Material Outward" domain="[('movement_type', '=', 'outward')]"/>
                    <filter name="return" string="Returns" domain="[('movement_type', '=', 'return')]"/>
                    <filter name="transfer" string="Transfers" domain="[('movement_type', '=', 'transfer')]"/>
                    <filter name="adjustment" string="Adjustments" domain="[('movement_type', '=', 'adjustment')]"/>
                    <separator/>
                    <filter name="today" string="Today" domain="[('movement_date', '&gt;=', datetime.datetime.combine(context_today(), datetime.time.min)), ('movement_date', '&lt;=', datetime.datetime.combine(context_today(), datetime.time.max))]"/>
                    <filter name="this_week" string="This Week" domain="[('movement_date', '&gt;=', (context_today() - relativedelta(weeks=1)).strftime('%%Y-%%m-%%d'))]"/>
                    <filter name="this_month" string="This Month" domain="[('movement_date', '&gt;=', (context_today().replace(day=1)).strftime('%%Y-%%m-%%d'))]"/>
                    <group expand="0" string="Group By">
                        <filter name="group_by_state" string="Status" context="{'group_by': 'state'}"/>
                        <filter name="group_by_movement_type" string="Movement Type" context="{'group_by': 'movement_type'}"/>
                        <filter name="group_by_technician" string="Technician" context="{'group_by': 'technician_id'}"/>
                        <filter name="group_by_date" string="Movement Date" context="{'group_by': 'movement_date:day'}"/>
                        <filter name="group_by_source_location" string="Source Location" context="{'group_by': 'source_location_id'}"/>
                    </group>
                </search>
            </field>
        </record>
        
        <!-- FSM Inventory Action -->
        <record id="action_fsm_inventory" model="ir.actions.act_window">
            <field name="name">FSM Inventory Movements</field>
            <field name="res_model">fsm.inventory</field>
            <field name="view_mode">tree,kanban,form,pivot,graph</field>
            <field name="search_view_id" ref="view_fsm_inventory_search"/>
            <field name="context">{'search_default_draft': 1, 'search_default_confirmed': 1}</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Create your first inventory movement
                </p>
                <p>
                    Track and manage inventory movements for field service operations including material inward, outward, returns, and transfers.
                </p>
            </field>
        </record>

        <!-- FSM Inventory Line Views (for debugging) -->
        <record id="view_fsm_inventory_line_tree" model="ir.ui.view">
            <field name="name">fsm.inventory.line.tree</field>
            <field name="model">fsm.inventory.line</field>
            <field name="arch" type="xml">
                <tree string="Inventory Lines">
                    <field name="inventory_id"/>
                    <field name="product_id"/>
                    <field name="spare_id"/>
                    <field name="quantity"/>
                    <field name="uom_id"/>
                    <field name="unit_value" widget="monetary"/>
                    <field name="total_value" widget="monetary"/>
                    <field name="currency_id" invisible="1"/>
                    <field name="is_defective"/>
                </tree>
            </field>
        </record>

        <record id="view_fsm_inventory_line_form" model="ir.ui.view">
            <field name="name">fsm.inventory.line.form</field>
            <field name="model">fsm.inventory.line</field>
            <field name="arch" type="xml">
                <form string="Inventory Line">
                    <sheet>
                        <group>
                            <group>
                                <field name="inventory_id"/>
                                <field name="product_id"/>
                                <field name="spare_id"/>
                                <field name="description"/>
                            </group>
                            <group>
                                <field name="quantity"/>
                                <field name="uom_id"/>
                                <field name="unit_value" widget="monetary"/>
                                <field name="total_value" widget="monetary"/>
                                <field name="currency_id" invisible="1"/>
                            </group>
                        </group>
                        <group>
                            <field name="lot_id"/>
                            <field name="is_defective"/>
                            <field name="defect_description" invisible="is_defective == False"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- FSM Stock Request Views -->
        <record id="view_fsm_stock_request_tree" model="ir.ui.view">
            <field name="name">fsm.stock.request.tree</field>
            <field name="model">fsm.stock.request</field>
            <field name="arch" type="xml">
                <tree string="Stock Requests" decoration-info="state=='draft'" decoration-warning="state=='submitted'" decoration-success="state=='fulfilled'">
                    <field name="name"/>
                    <field name="requested_by"/>
                    <field name="technician_id"/>
                    <field name="request_date"/>
                    <field name="expected_date"/>
                    <field name="urgency" widget="priority"/>
                    <field name="state" widget="badge"/>
                </tree>
            </field>
        </record>

        <record id="view_fsm_stock_request_form" model="ir.ui.view">
            <field name="name">fsm.stock.request.form</field>
            <field name="model">fsm.stock.request</field>
            <field name="arch" type="xml">
                <form string="Stock Request">
                    <header>
                        <button name="action_submit" string="Submit Request" type="object" class="btn-primary" 
                                invisible="state != 'draft'"/>
                        <button name="action_approve" string="Approve" type="object" class="btn-primary"
                                invisible="state != 'submitted'"/>
                        <button name="action_cancel" string="Cancel" type="object"
                                invisible="state == 'fulfilled'"/>
                        <field name="state" widget="statusbar" statusbar_visible="draft,submitted,approved,fulfilled"/>
                    </header>
                    <sheet>
                        <div class="oe_title">
                            <h1>
                                <field name="name" readonly="1"/>
                            </h1>
                        </div>
                        <group>
                            <group string="Request Details">
                                <field name="requested_by"/>
                                <field name="technician_id"/>
                                <field name="service_partner_id"/>
                                <field name="urgency"/>
                            </group>
                            <group string="Dates">
                                <field name="request_date"/>
                                <field name="expected_date"/>
                                <field name="approval_date" invisible="state in ['draft', 'submitted']"/>
                                <field name="approved_by" invisible="state in ['draft', 'submitted']"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="Requested Items">
                                <field name="line_ids">
                                    <tree editable="bottom">
                                        <field name="product_id" options="{'no_create': True}"/>
                                        <field name="spare_id"/>
                                        <field name="quantity"/>
                                        <field name="fulfilled_quantity"/>
                                        <field name="uom_id"/>
                                        <field name="notes"/>
                                    </tree>
                                </field>
                            </page>
                            <page string="Reason &amp; Notes">
                                <group>
                                    <field name="reason" placeholder="Explain why these items are needed..."/>
                                    <field name="notes" placeholder="Additional notes..."/>
                                </group>
                            </page>
                        </notebook>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids"/>
                        <field name="activity_ids"/>
                        <field name="message_ids"/>
                    </div>
                </form>
            </field>
        </record>

        <record id="action_fsm_stock_request" model="ir.actions.act_window">
            <field name="name">Stock Requests</field>
            <field name="res_model">fsm.stock.request</field>
            <field name="view_mode">tree,form</field>
            <field name="context">{'search_default_draft': 1, 'search_default_submitted': 1}</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Create your first stock request
                </p>
                <p>
                    Request stock items for field service operations.
                </p>
            </field>
        </record>

        <!-- Pivot and Graph Views -->
        <record id="view_fsm_inventory_pivot" model="ir.ui.view">
            <field name="name">fsm.inventory.pivot</field>
            <field name="model">fsm.inventory</field>
            <field name="arch" type="xml">
                <pivot string="Inventory Analysis">
                    <field name="movement_type" type="row"/>
                    <field name="technician_id" type="row"/>
                    <field name="state" type="col"/>
                    <field name="total_quantity" type="measure"/>
                    <field name="total_value" type="measure"/>
                </pivot>
            </field>
        </record>

        <record id="view_fsm_inventory_graph" model="ir.ui.view">
            <field name="name">fsm.inventory.graph</field>
            <field name="model">fsm.inventory</field>
            <field name="arch" type="xml">
                <graph string="Inventory Movements" type="bar">
                    <field name="movement_date" interval="week"/>
                    <field name="total_value" type="measure"/>
                    <field name="movement_type" type="row"/>
                </graph>
            </field>
        </record>
    </data>
</odoo>