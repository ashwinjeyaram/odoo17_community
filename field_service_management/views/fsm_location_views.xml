<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- FSM State Tree View -->
        <record id="view_fsm_state_tree" model="ir.ui.view">
            <field name="name">fsm.state.tree</field>
            <field name="model">fsm.state</field>
            <field name="arch" type="xml">
                <tree string="States">
                    <field name="name"/>
                    <field name="code"/>
                    <field name="country_id"/>
                    <field name="active"/>
                </tree>
            </field>
        </record>
        
        <!-- FSM State Form View -->
        <record id="view_fsm_state_form" model="ir.ui.view">
            <field name="name">fsm.state.form</field>
            <field name="model">fsm.state</field>
            <field name="arch" type="xml">
                <form string="State">
                    <sheet>
                        <widget name="web_ribbon" title="Archived" bg_color="bg-danger" invisible="active"/>
                        <group>
                            <group>
                                <field name="name"/>
                                <field name="code"/>
                            </group>
                            <group>
                                <field name="country_id"/>
                                <field name="active"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="Districts">
                                <field name="district_ids" context="{'default_state_id': id}">
                                    <tree editable="bottom">
                                        <field name="name"/>
                                        <field name="code"/>
                                        <field name="active"/>
                                    </tree>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>
        
        <!-- FSM State Search View -->
        <record id="view_fsm_state_search" model="ir.ui.view">
            <field name="name">fsm.state.search</field>
            <field name="model">fsm.state</field>
            <field name="arch" type="xml">
                <search string="Search States">
                    <field name="name"/>
                    <field name="code"/>
                    <filter name="active" string="Active" domain="[('active', '=', True)]"/>
                    <filter name="inactive" string="Archived" domain="[('active', '=', False)]"/>
                    <group expand="0" string="Group By">
                        <filter name="group_by_country" string="Country" context="{'group_by': 'country_id'}"/>
                    </group>
                </search>
            </field>
        </record>
        
        <!-- FSM State Action -->
        <record id="action_fsm_state" model="ir.actions.act_window">
            <field name="name">States</field>
            <field name="res_model">fsm.state</field>
            <field name="view_mode">tree,form</field>
            <field name="search_view_id" ref="view_fsm_state_search"/>
            <field name="context">{'search_default_active': 1}</field>
        </record>
        
        <!-- FSM District Tree View -->
        <record id="view_fsm_district_tree" model="ir.ui.view">
            <field name="name">fsm.district.tree</field>
            <field name="model">fsm.district</field>
            <field name="arch" type="xml">
                <tree string="Districts">
                    <field name="name"/>
                    <field name="state_id"/>
                    <field name="code"/>
                    <field name="active"/>
