                                <field name="name"/>
                                <field name="state_id"/>
                            </group>
                            <group>
                                <field name="code"/>
                                <field name="active"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="Pincodes">
                                <field name="pincode_ids" context="{'default_district_id': id}">
                                    <tree editable="bottom">
                                        <field name="pincode"/>
                                        <field name="active"/>
                                    </tree>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>
        
        <!-- FSM District Search View -->
