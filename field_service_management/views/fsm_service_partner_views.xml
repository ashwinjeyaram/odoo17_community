<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Tree View -->
        <record id="view_fsm_service_partner_tree" model="ir.ui.view">
            <field name="name">fsm.service.partner.tree</field>
            <field name="model">fsm.service.partner</field>
            <field name="arch" type="xml">
                <tree string="Service Partners">
                    <field name="code"/>
                    <field name="name"/>
                    <field name="partner_id"/>
                    <field name="city"/>
                    <field name="state_id"/>
                    <field name="contract_status"/>
                    <field name="technician_count"/>
                </tree>
            </field>
        </record>

        <!-- Form View -->
        <record id="view_fsm_service_partner_form" model="ir.ui.view">
            <field name="name">fsm.service.partner.form</field>
            <field name="model">fsm.service.partner</field>
            <field name="arch" type="xml">
                <form string="Service Partner">
                    <header>
                        <button name="action_activate_contract" string="Activate Contract" type="object" 
                                class="btn-primary" invisible="contract_status != 'draft'"/>
                        <button name="action_terminate_contract" string="Terminate Contract" type="object" 
                                class="btn-secondary" invisible="contract_status not in ['active', 'expired']"/>
                        <field name="contract_status" widget="statusbar" statusbar_visible="draft,active,expired"/>
                    </header>
                    <sheet>
                        <widget name="web_ribbon" title="Archived" bg_color="bg-danger" invisible="active"/>
                        <group>
                            <group>
                                <field name="code" readonly="1"/>
                                <field name="name"/>
                                <field name="partner_id" options="{'no_create': True}"/>
                                <field name="active" invisible="1"/>
                            </group>
                            <group>
                                <field name="contract_start_date"/>
                                <field name="contract_end_date"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="Contact Information">
                                <group>
                                    <group>
                                        <field name="street"/>
                                        <field name="street2"/>
                                        <field name="city"/>
                                        <field name="state_id"/>
                                        <field name="zip"/>
                                        <field name="country_id"/>
                                    </group>
                                    <group>
                                        <field name="phone"/>
                                        <field name="mobile"/>
                                        <field name="email"/>
                                        <field name="website"/>
                                    </group>
                                </group>
                            </page>
                            <page string="Service Areas">
                                <field name="service_area_ids">
                                    <tree editable="bottom">
                                        <field name="area_name"/>
                                        <field name="pincode_from"/>
                                        <field name="pincode_to"/>
                                        <field name="city"/>
                                        <field name="state"/>
                                        <field name="active"/>
                                    </tree>
                                </field>
                            </page>
                            <page string="TAT Categories">
                                <field name="tat_category_ids">
                                    <tree editable="bottom">
                                        <field name="name"/>
                                        <field name="days"/>
                                        <field name="amount" widget="monetary"/>
                                        <field name="description"/>
                                    </tree>
                                </field>
                            </page>
                            <page string="Financial Information">
                                <group>
                                    <group>
                                        <field name="bank_account_number"/>
                                        <field name="bank_name"/>
                                        <field name="ifsc_code"/>
                                    </group>
                                    <group>
                                        <field name="pan_number"/>
                                        <field name="gst_number"/>
                                    </group>
                                </group>
                            </page>
                            <page string="Performance">
                                <group>
                                    <group>
                                        <field name="total_calls"/>
                                        <field name="completed_calls"/>
                                        <field name="pending_calls"/>
                                    </group>
                                    <group>
                                        <field name="avg_rating" widget="float"/>
                                        <field name="total_claims_amount" widget="monetary"/>
                                        <field name="pending_claims_amount" widget="monetary"/>
                                    </group>
                                </group>
                            </page>
                        </notebook>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids"/>
                        <field name="activity_ids"/>
                        <field name="message_ids"/>
                    </div>
                </form>
            </field>
        </record>

        <!-- Action -->
        <record id="action_fsm_service_partner" model="ir.actions.act_window">
            <field name="name">Service Partners</field>
            <field name="res_model">fsm.service.partner</field>
            <field name="view_mode">tree,form</field>
        </record>
    </data>
</odoo>