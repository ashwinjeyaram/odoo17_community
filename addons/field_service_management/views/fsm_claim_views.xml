<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- FSM Claim Tree View -->
        <record id="view_fsm_claim_tree" model="ir.ui.view">
            <field name="name">fsm.claim.tree</field>
            <field name="model">fsm.claim</field>
            <field name="arch" type="xml">
                <tree string="Service Partner Claims" decoration-info="state=='draft'" decoration-warning="state=='submitted'" decoration-success="state=='paid'" decoration-danger="state=='rejected'">
                    <field name="name"/>
                    <field name="service_partner_id"/>
                    <field name="period_start"/>
                    <field name="period_end"/>
                    <field name="call_count"/>
                    <field name="total_amount" sum="Total" widget="monetary"/>
                    <field name="currency_id" invisible="1"/>
                    <field name="state" widget="badge"/>
                    <field name="claim_date"/>
                    <field name="approved_by"/>
                </tree>
            </field>
        </record>
        
        <!-- FSM Claim Form View -->
        <record id="view_fsm_claim_form" model="ir.ui.view">
            <field name="name">fsm.claim.form</field>
            <field name="model">fsm.claim</field>
            <field name="arch" type="xml">
                <form string="Service Partner Claim">
                    <header>
                        <button name="action_calculate_claim" string="Calculate Claim" type="object" class="btn-info" 
                                invisible="state != 'draft'"/>
                        <button name="action_submit" string="Submit for Verification" type="object" class="btn-primary" 
                                invisible="state != 'draft'"/>
                        <button name="action_verify" string="Verify" type="object" class="btn-primary" 
                                invisible="state != 'submitted'"/>
                        <button name="action_approve" string="Approve" type="object" class="btn-success" 
                                invisible="state != 'verified'"/>
                        <button name="action_pay" string="Mark as Paid" type="object" class="btn-success"
                                invisible="state != 'approved'"/>
                        <button name="action_reject" string="Reject" type="object" 
                                invisible="state not in ['submitted', 'verified']"/>
                        <button name="action_cancel" string="Cancel" type="object" 
                                invisible="state == 'paid'"/>
                        <button name="action_print_claim" string="Print Claim" type="object" icon="fa-print"
                                invisible="state in ['draft', 'cancelled']"/>
                        <field name="state" widget="statusbar" statusbar_visible="draft,submitted,verified,approved,paid"/>
                    </header>
                    <sheet>
                        <!-- <div class="oe_button_box" name="button_box">
                            <button name="action_view_attachments" type="object" class="oe_stat_button" icon="fa-paperclip">
                                <field name="attachment_count" widget="statinfo" string="Documents"/>
                            </button>
                            <button name="action_view_calls" type="object" class="oe_stat_button" icon="fa-phone">
                                <field name="call_count" widget="statinfo" string="Service Calls"/>
                            </button>
                        </div> -->
                        <widget name="web_ribbon" title="Paid" bg_color="bg-success" invisible="state != 'paid'"/>
                        <widget name="web_ribbon" title="Rejected" bg_color="bg-danger" invisible="state != 'rejected'"/>
                        <div class="oe_title">
                            <label for="name"/>
                            <h1>
                                <field name="name" placeholder="Claim Number" readonly="1"/>
                            </h1>
                        </div>
                        <group>
                            <group string="Service Partner Details">
                                <field name="service_partner_id" options="{'no_create': True}" invisible="state != 'draft'"/>
                                <field name="technician_ids" widget="many2many_tags" readonly="1"/>
                                <field name="claim_date"/>
                            </group>
                            <group string="Claim Period">
                                <field name="period_start" invisible="state != 'draft'"/>
                                <field name="period_end" invisible="state != 'draft'"/>
                                <field name="call_count" readonly="1"/>
                            </group>
                        </group>
                        <group>
                            <group string="Bank Details" invisible="state not in ['approved', 'paid']">
                                <field name="bank_account_number" readonly="1"/>
                                <field name="bank_name" readonly="1"/>
                                <field name="ifsc_code" readonly="1"/>
                            </group>
                            <group string="Payment Information" invisible="state not in ['approved', 'paid']">
                                <field name="payment_method"/>
                                <field name="payment_reference" invisible="state != 'approved'"/>
                                <field name="payment_date" readonly="1" invisible="state != 'paid'"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="Service Calls">
                                <field name="call_ids">
                                    <tree>
                                        <field name="name"/>
                                        <field name="partner_id"/>
                                        <field name="call_date"/>
                                        <field name="closed_date"/>
                                        <field name="state" widget="badge"/>
                                        <field name="technician_id"/>
                                    </tree>
                                </field>
                            </page>
                            <page string="Claim Lines">
                                <field name="claim_line_ids">
                                    <tree>
                                        <field name="tat_category_id"/>
                                        <field name="days_limit"/>
                                        <field name="call_count"/>
                                        <field name="rate" widget="monetary"/>
                                        <field name="amount" widget="monetary"/>
                                        <field name="currency_id" invisible="1"/>
                                    </tree>
                                </field>
                            </page>
                            <page string="Amount Details">
                                <group>
                                    <group string="Service Amounts">
                                        <field name="total_calls_amount" widget="monetary" readonly="1"/>
                                        <field name="spare_parts_amount" widget="monetary" readonly="1"/>
                                        <field name="expense_amount" widget="monetary" readonly="1"/>
                                    </group>
                                    <group string="Adjustments">
                                        <field name="incentive_amount" widget="monetary"/>
                                        <field name="penalty_amount" widget="monetary"/>
                                        <field name="currency_id" invisible="1"/>
                                    </group>
                                </group>
                                <group class="oe_subtotal_footer oe_right">
                                    <field name="subtotal_amount" widget="monetary" readonly="1"/>
                                    <field name="tax_amount" widget="monetary" readonly="1"/>
                                    <div class="oe_subtotal_footer_separator oe_inline">
                                        <label for="total_amount"/>
                                        <field name="total_amount" nolabel="1" class="oe_subtotal_footer_total" widget="monetary" readonly="1"/>
                                    </div>
                                </group>
                            </page>
                            <page string="Approval Information" invisible="state == 'draft'">
                                <group>
                                    <group string="Submission" invisible="state == 'draft'">
                                        <field name="submitted_by" readonly="1"/>
                                        <field name="submitted_date" readonly="1"/>
                                    </group>
                                    <group string="Verification" invisible="state in ['draft', 'submitted']">
                                        <field name="verified_by" readonly="1"/>
                                        <field name="verified_date" readonly="1"/>
                                    </group>
                                </group>
                                <group>
                                    <group string="Approval" invisible="state not in ['approved', 'paid']">
                                        <field name="approved_by" readonly="1"/>
                                        <field name="approved_date" readonly="1"/>
                                    </group>
                                    <group string="Rejection" invisible="state != 'rejected'">
                                        <field name="rejected_by" readonly="1"/>
                                        <field name="rejected_date" readonly="1"/>
                                        <field name="rejection_reason" readonly="1"/>
                                    </group>
                                </group>
                            </page>
                            <page string="Notes &amp; Documents">
                                <group>
                                    <field name="notes" placeholder="Additional notes about this claim..."/>
                                    <field name="internal_notes" placeholder="Internal notes (not visible to service partner)..."/>
                                </group>
                                <separator string="Supporting Documents"/>
                                <field name="attachment_ids" widget="many2many_binary"/>
                            </page>
                        </notebook>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids"/>
                        <field name="activity_ids"/>
                        <field name="message_ids"/>
                    </div>
                </form>
            </field>
        </record>
        
        <!-- FSM Claim Kanban View -->
        <record id="view_fsm_claim_kanban" model="ir.ui.view">
            <field name="name">fsm.claim.kanban</field>
            <field name="model">fsm.claim</field>
            <field name="arch" type="xml">
                <kanban default_group_by="state">
                    <field name="name"/>
                    <field name="service_partner_id"/>
                    <field name="call_count"/>
                    <field name="total_amount"/>
                    <field name="currency_id"/>
                    <field name="state"/>
                    <field name="claim_date"/>
                    <field name="period_start"/>
                    <field name="period_end"/>
                    <templates>
                        <t t-name="kanban-box">
                            <div t-attf-class="oe_kanban_global_click">
                                <div class="oe_kanban_details">
                                    <strong class="o_kanban_record_title">
                                        <field name="name"/>
                                    </strong>
                                    <div class="text-muted">
                                        <field name="service_partner_id"/>
                                    </div>
                                    <div>
                                        Period: <field name="period_start"/> to <field name="period_end"/>
                                    </div>
                                    <div>
                                        <span class="badge badge-info"><field name="call_count"/> Calls</span>
                                    </div>
                                    <div class="o_kanban_record_bottom">
                                        <div class="oe_kanban_bottom_left">
                                            <strong><field name="total_amount" widget="monetary"/></strong>
                                        </div>
                                        <div class="oe_kanban_bottom_right">
                                            <field name="claim_date" widget="date"/>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>
        
        <!-- FSM Claim Search View -->
        <record id="view_fsm_claim_search" model="ir.ui.view">
            <field name="name">fsm.claim.search</field>
            <field name="model">fsm.claim</field>
            <field name="arch" type="xml">
                <search string="Search Service Partner Claims">
                    <field name="name"/>
                    <field name="service_partner_id"/>
                    <field name="technician_ids"/>
                    <filter name="draft" string="Draft" domain="[('state', '=', 'draft')]"/>
                    <filter name="submitted" string="Submitted" domain="[('state', '=', 'submitted')]"/>
                    <filter name="verified" string="Verified" domain="[('state', '=', 'verified')]"/>
                    <filter name="approved" string="Approved" domain="[('state', '=', 'approved')]"/>
                    <filter name="paid" string="Paid" domain="[('state', '=', 'paid')]"/>
                    <filter name="rejected" string="Rejected" domain="[('state', '=', 'rejected')]"/>
                    <separator/>
                    <filter name="this_month" string="This Month" domain="[('claim_date', '&gt;=', (context_today().replace(day=1)).strftime('%%Y-%%m-%%d'))]"/>
                    <filter name="last_month" string="Last Month" domain="[
                        ('claim_date', '&gt;=', (context_today().replace(day=1) - relativedelta(months=1)).strftime('%%Y-%%m-%%d')),
                        ('claim_date', '&lt;', (context_today().replace(day=1)).strftime('%%Y-%%m-%%d'))
                    ]"/>
                    <filter name="pending_payment" string="Pending Payment" domain="[('state', 'in', ['verified', 'approved'])]"/>
                    <group expand="0" string="Group By">
                        <filter name="group_by_state" string="Status" context="{'group_by': 'state'}"/>
                        <filter name="group_by_partner" string="Service Partner" context="{'group_by': 'service_partner_id'}"/>
                        <filter name="group_by_date" string="Claim Date" context="{'group_by': 'claim_date:month'}"/>
                        <filter name="group_by_period" string="Period" context="{'group_by': 'period_start:month'}"/>
                    </group>
                </search>
            </field>
        </record>
        
        <!-- FSM Claim Action -->
        <record id="action_fsm_claim" model="ir.actions.act_window">
            <field name="name">Service Partner Claims</field>
            <field name="res_model">fsm.claim</field>
            <field name="view_mode">tree,kanban,form,pivot,graph</field>
            <field name="search_view_id" ref="view_fsm_claim_search"/>
            <field name="context">{'search_default_submitted': 1, 'search_default_verified': 1, 'search_default_approved': 1}</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Create a new service partner claim
                </p>
                <p>
                    Manage payment claims from service partners based on completed service calls and TAT performance.
                </p>
            </field>
        </record>

        <!-- FSM Claim Line Views -->
        <record id="view_fsm_claim_line_tree" model="ir.ui.view">
            <field name="name">fsm.claim.line.tree</field>
            <field name="model">fsm.claim.line</field>
            <field name="arch" type="xml">
                <tree string="Claim Lines">
                    <field name="claim_id"/>
                    <field name="tat_category_id"/>
                    <field name="days_limit"/>
                    <field name="call_count"/>
                    <field name="rate" widget="monetary"/>
                    <field name="amount" widget="monetary"/>
                    <field name="currency_id" invisible="1"/>
                </tree>
            </field>
        </record>

        <record id="view_fsm_claim_line_form" model="ir.ui.view">
            <field name="name">fsm.claim.line.form</field>
            <field name="model">fsm.claim.line</field>
            <field name="arch" type="xml">
                <form string="Claim Line">
                    <sheet>
                        <group>
                            <group>
                                <field name="claim_id"/>
                                <field name="tat_category_id"/>
                                <field name="days_limit" readonly="1"/>
                            </group>
                            <group>
                                <field name="call_count" readonly="1"/>
                                <field name="rate" widget="monetary"/>
                                <field name="amount" widget="monetary" readonly="1"/>
                                <field name="currency_id" invisible="1"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="Service Calls">
                                <field name="call_ids">
                                    <tree>
                                        <field name="name"/>
                                        <field name="partner_id"/>
                                        <field name="call_date"/>
                                        <field name="closed_date"/>
                                        <field name="state" widget="badge"/>
                                    </tree>
                                </field>
                            </page>
                            <page string="Notes">
                                <field name="notes" placeholder="Additional notes for this claim line..."/>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- Claim Reject Wizard -->
        <record id="view_fsm_claim_reject_form" model="ir.ui.view">
            <field name="name">fsm.claim.reject.form</field>
            <field name="model">fsm.claim.reject</field>
            <field name="arch" type="xml">
                <form string="Reject Claim">
                    <group>
                        <field name="claim_id" readonly="1"/>
                        <field name="rejection_reason" placeholder="Please provide reason for rejection..."/>
                    </group>
                    <footer>
                        <button name="action_reject" string="Reject Claim" type="object" class="btn-primary"/>
                        <button string="Cancel" class="btn-secondary" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>

        <!-- Pivot and Graph Views -->
        <record id="view_fsm_claim_pivot" model="ir.ui.view">
            <field name="name">fsm.claim.pivot</field>
            <field name="model">fsm.claim</field>
            <field name="arch" type="xml">
                <pivot string="Claims Analysis">
                    <field name="service_partner_id" type="row"/>
                    <field name="claim_date" interval="month" type="col"/>
                    <field name="call_count" type="measure"/>
                    <field name="total_amount" type="measure"/>
                </pivot>
            </field>
        </record>

        <record id="view_fsm_claim_graph" model="ir.ui.view">
            <field name="name">fsm.claim.graph</field>
            <field name="model">fsm.claim</field>
            <field name="arch" type="xml">
                <graph string="Claims Trend" type="bar">
                    <field name="claim_date" interval="month"/>
                    <field name="total_amount" type="measure"/>
                    <field name="service_partner_id" type="row"/>
                </graph>
            </field>
        </record>
    </data>
</odoo>