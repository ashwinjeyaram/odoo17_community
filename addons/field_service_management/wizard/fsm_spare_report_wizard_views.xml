<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Spare Report Wizard Form View -->
        <record id="view_fsm_spare_report_wizard_form" model="ir.ui.view">
            <field name="name">fsm.spare.report.wizard.form</field>
            <field name="model">fsm.spare.report.wizard</field>
            <field name="arch" type="xml">
                <form string="Spare Request Report">
                    <sheet>
                        <div class="oe_title">
                            <h1>
                                <span>Generate Spare Request Report</span>
                            </h1>
                        </div>
                        <group>
                            <group string="Date Range">
                                <field name="date_from"/>
                                <field name="date_to"/>
                            </group>
                            <group string="Report Options">
                                <field name="group_by"/>
                                <field name="state_filter"/>
                            </group>
                        </group>
                        <group>
                            <group string="Filter by Technician">
                                <field name="technician_ids" widget="many2many_tags" placeholder="Select technicians..."/>
                            </group>
                            <group string="Filter by Spare Parts">
                                <field name="spare_ids" widget="many2many_tags" placeholder="Select spare parts..."/>
                            </group>
                        </group>
                        <group>
                            <group string="Filter by Service Calls">
                                <field name="call_ids" widget="many2many_tags" placeholder="Select service calls..."/>
                            </group>
                            <group string="Filter by Customers">
                                <field name="partner_ids" widget="many2many_tags" placeholder="Select customers..."/>
                            </group>
                        </group>
                    </sheet>
                    <footer>
                        <button name="action_print_report" string="Generate PDF Report" type="object" class="btn-primary"/>
                        <button string="Cancel" class="btn-secondary" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>

        <!-- Action to open the wizard -->
        <record id="action_fsm_spare_report_wizard" model="ir.actions.act_window">
            <field name="name">Generate Spare Request Report</field>
            <field name="res_model">fsm.spare.report.wizard</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
            <field name="view_id" ref="view_fsm_spare_report_wizard_form"/>
        </record>

        <!-- Menu item for the report wizard -->
        <menuitem id="menu_fsm_spare_report_wizard"
                  name="Spare Request Report"
                  parent="field_service_management.menu_fsm_reports"
                  action="action_fsm_spare_report_wizard"
                  sequence="20"/>
    </data>
</odoo>