<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Technician Assignment Wizard Form View -->
        <record id="view_fsm_technician_assignment_wizard_form" model="ir.ui.view">
            <field name="name">fsm.technician.assignment.wizard.form</field>
            <field name="model">fsm.technician.assignment.wizard</field>
            <field name="arch" type="xml">
                <form string="Assign Technician">
                    <group>
                        <field name="call_id" readonly="1"/>
                        <field name="dealer_ids" invisible="1"/>
                        <field name="dealer_id" domain="[('id', 'in', dealer_ids)]" required="1"/>
                        <field name="technician_ids" invisible="1"/>
                        <field name="technician_id" domain="[('id', 'in', technician_ids)]">
                            <tree>
                                <field name="name"/>
                                <field name="code"/>
                                <field name="service_partner_id"/>
                                <field name="dealer_id"/>
                                <field name="state" widget="badge"/>
                                <field name="active_call_count"/>
                                <field name="rating" widget="priority"/>
                            </tree>
                        </field>
                    </group>
                    <footer>
                        <button name="action_assign_technician" string="Assign Technician" type="object" class="btn-primary"/>
                        <button string="Cancel" class="btn-secondary" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>

        <!-- Technician Assignment Wizard Action -->
        <record id="action_fsm_technician_assignment_wizard" model="ir.actions.act_window">
            <field name="name">Assign Technician</field>
            <field name="res_model">fsm.technician.assignment.wizard</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
            <field name="context">{'default_call_id': active_id}</field>
        </record>
    </data>
</odoo>